    <!-- Custom CSS -->
    <link href="css/customestylesheet.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&family=Roboto+Mono&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Meta -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />

    <!-- jQuery -->
    <script src='<%= ResolveUrl("~/js/jquery-3.6.0.min.js") %>'></script>

    <!-- DataTables Core + Extensions -->
