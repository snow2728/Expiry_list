<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Site1.master.cs" Inherits="Expiry_list.Site1"  %>

<!DOCTYPE html>
<html>
<head runat="server">
    <title>Expiry List</title>
    <link rel="icon" href="imgs/logo2.png" class="rounded-2" type="image/x-icon" />

    <!-- Bootstrap CSS -->
    <link href="bootstrap\css\bootstrap.min.css" rel="stylesheet" />

    <!-- DataTables Core + Extensions -->
    <link href="datatables\css\jquery.dataTables.min.css" rel="stylesheet" />
    <link href="datatables\css\fixedColumns.dataTables.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
